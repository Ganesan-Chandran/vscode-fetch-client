trim_trailing_whitespace = true

[*.{yml,yaml,yml.tpl}]
indent_size = 2
indent_style = space

[*.md]
indent_style = space
indent_size = 2

[*.json]
indent_size = 2
indent_style = space

[.husky/_/husky.sh]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset

[.npmrc]
charset = unset
end_of_line = unset
insert_final_newline = unset
